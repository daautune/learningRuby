    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
     <%= render "layouts/header" %>
    </header>
    <div class="container">
    <%= yield %>
    </div>
   <footer  class="container-fluid bg-4 text-center">
      <%= render "layouts/footer" %>

   </footer>
  </body>
</html>
